name: object-detection

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      batch-size: {type: int, default: 128}
      test-batch-size: {type: int, default: 1000}
      epochs: {type: int, default: 200}
      lr: {type: float, default: 0.1}
      momentum: {type: float, default: 0.5}
      enable-cuda: {type: string, default: 'True'}
      seed: {type: int, default: 5}
      log-interval: {type: int, default: 100}
      
    
    command: "python main.py --batch-size {batch-size} --test-batch-size {test-batch-size} --epochs {epochs} --lr {lr} --momentum {momentum} --enable-cuda {enable-cuda} --seed {seed} --log-interval {log-interval}"
    
